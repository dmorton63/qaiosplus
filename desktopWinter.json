{
    "desktop": {
        "background": {
            "type": "image",
            "path": "/system/wallpapers/winter_forest_frost.png",
            "mode": "stretch"
        },
        "theme": {
            "accent": "#7AA0C8",
            "accentLight": "#BFD6F0",
            "accentDark": "#4A6A8A",
            "text": "#FFFFFF",
            "textSecondary": "#E6F0FA",
            "panel": "#1C242C",
            "panelBorder": "#2E3A45"
        },
        "layout": {
            "type": "absolute",
            "controls": [
                {
                    "id": "headerBar",
                    "type": "panel",
                    "x": 0,
                    "y": 0,
                    "width": "100%",
                    "height": 56,
                    "background": "#4A6A8A",
                    "borderBottom": "#2E3F52",
                    "children": [
                        {
                            "id": "headerTitle",
                            "type": "label",
                            "text": "QAIOS++ Winter Desktop",
                            "x": 20,
                            "y": 16,
                            "color": "#E6F0FA",
                            "font": "system-bold-18"
                        },
                        {
                            "id": "headerFrost",
                            "type": "label",
                            "text": "❄️",
                            "x": "right-160",
                            "y": 14,
                            "color": "#FFFFFF",
                            "font": "system-bold-24"
                        },
                        {
                            "id": "clockLabel",
                            "type": "label",
                            "text": "12:45 PM",
                            "x": "right-100",
                            "y": 18,
                            "color": "#E6F0FA",
                            "font": "system-regular-16"
                        }
                    ]
                },
                {
                    "id": "sidebar",
                    "type": "panel",
                    "x": 0,
                    "y": 56,
                    "width": 200,
                    "height": "100%-56",
                    "background": "#1C242C",
                    "borderRight": "#2E3A45",
                    "children": [
                        {
                            "id": "sidebarTitle",
                            "type": "label",
                            "text": "Applications",
                            "x": 20,
                            "y": 20,
                            "color": "#D9E6F2",
                            "font": "system-bold-14"
                        },
                        {
                            "id": "btnFiles",
                            "type": "button",
                            "text": "File Manager",
                            "x": 20,
                            "y": 60,
                            "width": 160,
                            "height": 32,
                            "role": "sidebar",
                            "icon": "/system/icons/folder.png"
                        },
                        {
                            "id": "btnSettings",
                            "type": "button",
                            "text": "Settings",
                            "x": 20,
                            "y": 100,
                            "width": 160,
                            "height": 32,
                            "role": "sidebar",
                            "icon": "/system/icons/settings.png"
                        },
                        {
                            "id": "btnTerminal",
                            "type": "button",
                            "text": "Terminal",
                            "x": 20,
                            "y": 140,
                            "width": 160,
                            "height": 32,
                            "role": "sidebar",
                            "icon": "/system/icons/terminal.png"
                        },
                        {
                            "id": "btnWinterNotes",
                            "type": "button",
                            "text": "Winter Notes",
                            "x": 20,
                            "y": 180,
                            "width": 160,
                            "height": 32,
                            "role": "sidebar",
                            "icon": "/system/icons/snowflake.png"
                        }
                    ]
                },
                {
                    "id": "mainContent",
                    "type": "panel",
                    "x": 200,
                    "y": 56,
                    "width": "100%-200",
                    "height": "100%-56",
                    "background": "rgba(255,255,255,0.18)",
                    "children": [
                        {
                            "id": "welcomeLabel",
                            "type": "label",
                            "text": "Welcome to Winter in QAIOS++",
                            "x": 40,
                            "y": 40,
                            "color": "#2E3F52",
                            "font": "system-bold-28"
                        },
                        {
                            "id": "infoLabel",
                            "type": "label",
                            "text": "Quiet colors, frosted edges, and a calm workspace.",
                            "x": 40,
                            "y": 90,
                            "color": "#4A6A8A",
                            "font": "system-regular-16"
                        },
                        {
                            "id": "cardPanel",
                            "type": "panel",
                            "x": 40,
                            "y": 150,
                            "width": 420,
                            "height": 220,
                            "background": "#E6F0FA",
                            "border": "#AFC4D8",
                            "children": [
                                {
                                    "id": "cardTitle",
                                    "type": "label",
                                    "text": "System Information",
                                    "x": 20,
                                    "y": 20,
                                    "color": "#2E3F52",
                                    "font": "system-bold-18"
                                },
                                {
                                    "id": "cardText",
                                    "type": "label",
                                    "text": "Kernel: QAIOS++ Experimental\nTheme: Winter 2026\nRenderer: PainterSurface\nSeasonal Mode: Frost",
                                    "x": 20,
                                    "y": 60,
                                    "color": "#4A6A8A",
                                    "font": "system-regular-14"
                                }
                            ]
                        }
                    ]
                },
                {
                    "id": "taskbar",
                    "type": "panel",
                    "x": 0,
                    "y": "bottom-48",
                    "width": "100%",
                    "height": 48,
                    "background": "#4A6A8A",
                    "borderTop": "#2E3F52",
                    "children": [
                        {
                            "id": "startButton",
                            "type": "button",
                            "text": "❄️ Start",
                            "x": 10,
                            "y": 9,
                            "width": 100,
                            "height": 30,
                            "role": "accent",
                            "icon": "/system/icons/snowflake.png"
                        },
                        {
                            "id": "shutDownButton",
                            "type": "button",
                            "text": "Shut Down",
                            "x": 120,
                            "y": 9,
                            "width": 100,
                            "height": 30,
                            "role": "destructive",
                            "icon": "/system/icons/shutdown.png"
                        },
                        {
                            "id": "taskbarClock",
                            "type": "label",
                            "text": "12:45 PM",
                            "x": "right-80",
                            "y": 14,
                            "color": "#E6F0FA",
                            "font": "system-regular-16"
                        }
                    ]
                }
            ]
        }
    }
}
{
    "desktop": {
        "background": {
            "type": "image",
            "path": "/system/wallpapers/summer_beach_sky.png",
            "mode": "stretch"
        },
        "theme": {
            "base": "Vista",
            "overrides": {
                "palette": {
                    "accent": "#4FA7E3",
                    "accentLight": "#8FD1FF",
                    "accentDark": "#2F6FA3",
                    "text": "#FFFFFF",
                    "textSecondary": "#E3F4FF",
                    "panel": "#1E2A33",
                    "panelBorder": "#2F3E4A"
                },
                "metrics": {
                    "cornerRadius": 6,
                    "buttonCornerRadius": 6,
                    "borderWidth": 1
                },
                "button": {
                    "sidebar": {
                        "fillNormal": "#1E2A33",
                        "fillHover": "#2F3E4A",
                        "text": "#CFEAFF",
                        "border": "#2F3E4A"
                    },
                    "accent": {
                        "fillNormal": "#4FA7E3",
                        "fillHover": "#8FD1FF",
                        "fillPressed": "#2F6FA3",
                        "text": "#FFFFFF",
                        "border": "#1C425F",
                        "shineIntensity": 0.35,
                        "glass": true
                    },
                    "destructive": {
                        "fillNormal": "#C84040",
                        "fillHover": "#D85A5A",
                        "fillPressed": "#A03030",
                        "text": "#FFFFFF",
                        "border": "#802020",
                        "glass": true
                    }
                }
            }
        },
        "layout": {
            "type": "absolute",
            "controls": [
                {
                    "id": "headerBar",
                    "type": "panel",
                    "x": 0,
                    "y": 0,
                    "width": "100%",
                    "height": 56,
                    "background": "#2F6FA3",
                    "borderBottom": "#1C425F",
                    "children": [
                        {
                            "id": "headerTitle",
                            "type": "label",
                            "text": "QAIOS++ Summer Desktop",
                            "x": 20,
                            "y": 16,
                            "color": "#E3F4FF",
                            "font": "system-bold-18"
                        },
                        {
                            "id": "headerSun",
                            "type": "label",
                            "text": "☀️",
                            "x": "right-160",
                            "y": 14,
                            "color": "#FFFFFF",
                            "font": "system-bold-24"
                        },
                        {
                            "id": "clockLabel",
                            "type": "label",
                            "text": "12:45 PM",
                            "x": "right-100",
                            "y": 18,
                            "color": "#E3F4FF",
                            "font": "system-regular-16"
                        }
                    ]
                },
                {
                    "id": "sidebar",
                    "type": "panel",
                    "x": 0,
                    "y": 56,
                    "width": 200,
                    "height": "100%-56",
                    "background": "#1E2A33",
                    "borderRight": "#2F3E4A",
                    "children": [
                        {
                            "id": "sidebarTitle",
                            "type": "label",
                            "text": "Applications",
                            "x": 20,
                            "y": 20,
                            "color": "#CFEAFF",
                            "font": "system-bold-14"
                        },
                        {
                            "id": "btnFiles",
                            "type": "button",
                            "text": "File Manager",
                            "x": 20,
                            "y": 60,
                            "width": 160,
                            "height": 32,
                            "role": "sidebar",
                            "icon": "/system/icons/folder.png"
                        },
                        {
                            "id": "btnSettings",
                            "type": "button",
                            "text": "Settings",
                            "x": 20,
                            "y": 100,
                            "width": 160,
                            "height": 32,
                            "role": "sidebar",
                            "icon": "/system/icons/settings.png"
                        },
                        {
                            "id": "btnTerminal",
                            "type": "button",
                            "text": "Terminal",
                            "x": 20,
                            "y": 140,
                            "width": 160,
                            "height": 32,
                            "role": "sidebar",
                            "icon": "/system/icons/terminal.png"
                        },
                        {
                            "id": "btnSummerNotes",
                            "type": "button",
                            "text": "Summer Notes",
                            "x": 20,
                            "y": 180,
                            "width": 160,
                            "height": 32,
                            "role": "sidebar",
                            "icon": "/system/icons/sun.png"
                        }
                    ]
                },
                {
                    "id": "mainContent",
                    "type": "panel",
                    "x": 200,
                    "y": 56,
                    "width": "100%-200",
                    "height": "100%-56",
                    "background": "rgba(255,255,255,0.20)",
                    "children": [
                        {
                            "id": "welcomeLabel",
                            "type": "label",
                            "text": "Welcome to Summer in QAIOS++!",
                            "x": 40,
                            "y": 40,
                            "color": "#1C425F",
                            "font": "system-bold-28"
                        },
                        {
                            "id": "infoLabel",
                            "type": "label",
                            "text": "Bright skies, warm colors, and a relaxed workspace.",
                            "x": 40,
                            "y": 90,
                            "color": "#2F6FA3",
                            "font": "system-regular-16"
                        },
                        {
                            "id": "cardPanel",
                            "type": "panel",
                            "x": 40,
                            "y": 150,
                            "width": 420,
                            "height": 220,
                            "background": "#E3F4FF",
                            "border": "#A8CDE6",
                            "children": [
                                {
                                    "id": "cardTitle",
                                    "type": "label",
                                    "text": "System Information",
                                    "x": 20,
                                    "y": 20,
                                    "color": "#1C425F",
                                    "font": "system-bold-18"
                                },
                                {
                                    "id": "cardText",
                                    "type": "label",
                                    "text": "Kernel: QAIOS++ Experimental\nTheme: Summer 2026\nRenderer: PainterSurface\nSeasonal Mode: Sunburst",
                                    "x": 20,
                                    "y": 60,
                                    "color": "#2F6FA3",
                                    "font": "system-regular-14"
                                }
                            ]
                        }
                    ]
                },
                {
                    "id": "taskbar",
                    "type": "panel",
                    "x": 0,
                    "y": "bottom-48",
                    "width": "100%",
                    "height": 48,
                    "background": "#2F6FA3",
                    "borderTop": "#1C425F",
                    "children": [
                        {
                            "id": "startButton",
                            "type": "button",
                            "text": "☀️ Start",
                            "x": 10,
                            "y": 9,
                            "width": 100,
                            "height": 30,
                            "role": "accent",
                            "icon": "/system/icons/sun.png"
                        },
                        {
                            "id": "shutDownButton",
                            "type": "button",
                            "text": "Shut Down",
                            "x": 120,
                            "y": 9,
                            "width": 100,
                            "height": 30,
                            "role": "destructive",
                            "icon": "/system/icons/shutdown.png"
                        },
                        {
                            "id": "taskbarClock",
                            "type": "label",
                            "text": "12:45 PM",
                            "x": "right-80",
                            "y": 14,
                            "color": "#E3F4FF",
                            "font": "system-regular-16"
                        }
                    ]
                }
            ]
        }
    }
}
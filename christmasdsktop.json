                            "icon": "/system/icons/shutdown.png"
                        },
                        {
                            "id": "taskbarClock",
                            "type": "label",
                            "text": "12:45 PM",
                            "x": "right-80",
                            "y": 14,
                            "color": "#FFE8C6",
                            "font": "system-regular-16"

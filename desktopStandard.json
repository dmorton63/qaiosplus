{
    "desktop": {
        "background": {
            "type": "image",
            "path": "/system/wallpapers/aurora.png",
            "mode": "stretch"
        },
        "theme": {
            "accent": "#4A90E2",
            "accentLight": "#6BB6FF",
            "accentDark": "#2F5A8A",
            "text": "#FFFFFF",
            "textSecondary": "#CCCCCC",
            "panel": "#202020",
            "panelBorder": "#303030"
        },
        "layout": {
            "type": "absolute",
            "controls": [
                {
                    "id": "headerBar",
                    "type": "panel",
                    "x": 0,
                    "y": 0,
                    "width": "100%",
                    "height": 48,
                    "background": "#181818",
                    "borderBottom": "#303030",
                    "children": [
                        {
                            "id": "headerTitle",
                            "type": "label",
                            "text": "QAIOS+ Desktop Environment",
                            "x": 20,
                            "y": 12,
                            "color": "#FFFFFF",
                            "font": "system-regular-16"
                        },
                        {
                            "id": "clockLabel",
                            "type": "label",
                            "text": "12:45 PM",
                            "x": "right-120",
                            "y": 12,
                            "color": "#CCCCCC",
                            "font": "system-regular-16"
                        }
                    ]
                },
                {
                    "id": "sidebar",
                    "type": "panel",
                    "x": 0,
                    "y": 48,
                    "width": 200,
                    "height": "100%-48",
                    "background": "#1A1A1A",
                    "borderRight": "#303030",
                    "children": [
                        {
                            "id": "sidebarTitle",
                            "type": "label",
                            "text": "Applications",
                            "x": 20,
                            "y": 20,
                            "color": "#AAAAAA",
                            "font": "system-bold-14"
                        },
                        {
                            "id": "btnFiles",
                            "type": "button",
                            "text": "File Manager",
                            "x": 20,
                            "y": 60,
                            "width": 160,
                            "height": 32,
                            "role": "sidebar",
                            "icon": "/system/icons/folder.png"
                        },
                        {
                            "id": "btnSettings",
                            "type": "button",
                            "text": "Settings",
                            "x": 20,
                            "y": 100,
                            "width": 160,
                            "height": 32,
                            "role": "sidebar",
                            "icon": "/system/icons/settings.png"
                        },
                        {
                            "id": "btnTerminal",
                            "type": "button",
                            "text": "Terminal",
                            "x": 20,
                            "y": 140,
                            "width": 160,
                            "height": 32,
                            "role": "sidebar",
                            "icon": "/system/icons/terminal.png"
                        }
                    ]
                },
                {
                    "id": "mainContent",
                    "type": "panel",
                    "x": 200,
                    "y": 48,
                    "width": "100%-200",
                    "height": "100%-48",
                    "background": "#202020",
                    "children": [
                        {
                            "id": "welcomeLabel",
                            "type": "label",
                            "text": "Welcome to QAIOS+!",
                            "x": 40,
                            "y": 40,
                            "color": "#FFFFFF",
                            "font": "system-bold-24"
                        },
                        {
                            "id": "infoLabel",
                            "type": "label",
                            "text": "This desktop is fully defined by JSON.",
                            "x": 40,
                            "y": 80,
                            "color": "#CCCCCC",
                            "font": "system-regular-16"
                        },
                        {
                            "id": "cardPanel",
                            "type": "panel",
                            "x": 40,
                            "y": 140,
                            "width": 400,
                            "height": 200,
                            "background": "#2A2A2A",
                            "border": "#404040",
                            "children": [
                                {
                                    "id": "cardTitle",
                                    "type": "label",
                                    "text": "System Information",
                                    "x": 20,
                                    "y": 20,
                                    "color": "#FFFFFF",
                                    "font": "system-bold-18"
                                },
                                {
                                    "id": "cardText",
                                    "type": "label",
                                    "text": "Kernel: QAIOS+ Experimental\nFilesystem: FAT32 + Ramdisk\nRenderer: PainterSurface",
                                    "x": 20,
                                    "y": 60,
                                    "color": "#CCCCCC",
                                    "font": "system-regular-14"
                                }
                            ]
                        }
                    ]
                },
                {
                    "id": "taskbar",
                    "type": "panel",
                    "x": 0,
                    "y": "bottom-40",
                    "width": "100%",
                    "height": 40,
                    "background": "#181818",
                    "borderTop": "#303030",
                    "children": [
                        {
                            "id": "startButton",
                            "type": "button",
                            "text": "Start",
                            "x": 10,
                            "y": 5,
                            "width": 80,
                            "height": 30,
                            "role": "accent",
                            "icon": "/system/icons/start.png"
                        },
                        {
                            "id": "shutDownButton",
                            "type": "button",
                            "text": "Shut Down",
                            "x": 100,
                            "y": 5,
                            "width": 80,
                            "height": 30,
                            "role": "destructive",
                            "icon": "/system/icons/shutdown.png"
                        },
                        {
                            "id": "taskbarClock",
                            "type": "label",
                            "text": "12:45 PM",
                            "x": "right-80",
                            "y": 10,
                            "color": "#CCCCCC",
                            "font": "system-regular-14"
                        }
                    ]
                }
            ]
        }
    }
}